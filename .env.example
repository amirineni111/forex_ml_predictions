# Forex ML Models Environment Configuration
# Copy this file to .env and update with your actual database credentials

# SQL Server Connection Settings
SQL_SERVER=your-sql-server-instance
SQL_DATABASE=your-forex-database
SQL_USERNAME=your-username
SQL_PASSWORD=your-password
SQL_DRIVER=ODBC Driver 17 for SQL Server
SQL_TRUSTED_CONNECTION=no

# Alternative: Use Windows Authentication
# SQL_TRUSTED_CONNECTION=yes

# Forex Data Settings
FOREX_BASE_TABLE=forex_data
FOREX_INDICATORS_VIEW=forex_indicators_view

# ML Model Settings
MODEL_SAVE_PATH=./data/models/
RESULTS_SAVE_PATH=./results/
REPORTS_SAVE_PATH=./reports/

# Trading Parameters
DEFAULT_LOOKBACK_DAYS=60
DEFAULT_PREDICTION_HORIZON=5
MIN_TRAINING_SAMPLES=1000

# Technical Indicators Settings
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
ATR_PERIOD=14
BB_PERIOD=20
BB_STD=2
SMA_PERIODS=5,10,20,50,200
EMA_PERIODS=5,10,20,50,200

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/forex_ml.log

# =============================================================================
# Remote Access from Machine B (SQL Server on Machine A)
# =============================================================================
# If running this repo on a different machine from SQL Server, uncomment and
# update the settings below. Replace <MachineA_IP> with Machine A's LAN IP.
#
# SQL_SERVER=<MachineA_IP>\MSSQLSERVER01
# SQL_DATABASE=stockdata_db
# SQL_TRUSTED_CONNECTION=no
# SQL_USERNAME=your_sql_login
# SQL_PASSWORD=your_sql_password
# SQL_DRIVER=ODBC Driver 17 for SQL Server